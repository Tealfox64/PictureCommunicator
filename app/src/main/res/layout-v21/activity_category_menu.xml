<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs246.picturecommunicator.CategoryMenu">

    <ImageButton
        android:id="@+id/activities_category_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:contentDescription="@string/activities_category"
        android:tint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/pain_category_button"
        app:layout_constraintEnd_toStartOf="@+id/food_category_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/activitiesicon125" />

    <ImageButton
        android:id="@+id/food_category_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:contentDescription="@string/food_category"
        android:onClick="foodButton"
        android:tint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/family_category_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activities_category_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foodicon125" />

    <ImageButton
        android:id="@+id/pain_category_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:contentDescription="@string/pain_category"
        android:onClick="painButton"
        android:tint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/family_category_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activities_category_button"
        app:srcCompat="@drawable/healthicon125" />

    <ImageButton
        android:id="@+id/family_category_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:contentDescription="@string/family_category"
        android:onClick="familyButton"
        android:tint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pain_category_button"
        app:layout_constraintTop_toBottomOf="@+id/food_category_button"
        app:srcCompat="@drawable/familyicon125" />
</android.support.constraint.ConstraintLayout>
